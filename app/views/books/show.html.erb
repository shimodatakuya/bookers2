<div class= "container">
  <div class= "row">
    <div class="col-md-3">
        <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th class="profile-name"><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th class="profile-introduction"><%= @user.introduction %></th>
            </tr>
          </thead>
        </table>

          <P><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></P>

      <h1>New book</h1>
      <%= form_with model:@new_book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
            <tr>
              <th>
               <%= link_to user_path(@user.id) do %>
      　　       <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback:'no_image.jpg' %> <br>
      　      　 <%= @user.name %>
               <% end %>
               </th>
               <th><%= link_to @book.title, book_path(@book) %></th>
               <th><%= @book.body %></th>
              <% if @user.id == current_user.id %>
               <th><%= link_to "Edit", edit_book_path(@book) %></th>
               <th><%= link_to "Destroy", book_path(@book),method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
              <% end %>
            </tr>


        </thead>
      </table>
      </div>
  </div>
</div>