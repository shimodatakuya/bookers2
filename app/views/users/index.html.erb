<div class="container px-5 px-sm-0">
  <div class= "row">
    <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th class="profile-name"><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th class="profile-introduction"><%= @user.introduction %></th>
            </tr>
          </thead>
        </table>
          <% if @user.id == current_user.id %>
          <P><%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></P>
        <% end %>

      <h1>New book</h1>
      <%= form_with model:@book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
      </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <% @users.each do |user| %>
            <tr>
               <th><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback:'no_image.jpg', size:'40x40' %></th>
               <th><%= user.name %></th>
               <th><%= link_to "Show", user_path(user) %></th>
            </tr>
            <% end %>
          </tr>
        </thead>
      </table>
      </div>
  </div>
</div>